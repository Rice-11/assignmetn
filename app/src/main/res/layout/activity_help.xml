<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".help"
    android:background="@drawable/background2">

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="247dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="637dp"
        android:background="@drawable/roundedcorner"
        android:backgroundTint="#4D000000"
        android:backgroundTintMode="multiply"
        android:padding="10sp"
        android:text="Help"
        android:textColor="@color/white"
        android:textSize="40sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/expenseh"
        android:layout_width="375dp"
        android:layout_height="148dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="22dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/roundedcorner"
        android:backgroundTint="#4D000000"
        android:backgroundTintMode="multiply"
        android:padding="10sp"
        android:paddingLeft="10sp"
        android:text="Need help for using the application?
If you have bought something and want to minus the amount you have press expense and type in the amount you spent"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <TextView
        android:id="@+id/incomeh"
        android:layout_width="375dp"
        android:layout_height="97dp"
        android:layout_marginStart="18dp"
        android:layout_marginEnd="18dp"
        android:layout_marginBottom="178dp"
        android:background="@drawable/roundedcorner"
        android:backgroundTint="#4D000000"
        android:backgroundTintMode="multiply"
        android:padding="10sp"
        android:paddingLeft="10sp"
        android:text="And If you recive some sort of income and wanted to add it into the app press the add income button"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>